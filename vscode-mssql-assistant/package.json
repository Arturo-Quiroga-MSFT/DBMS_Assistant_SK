{
  "name": "vscode-mssql-assistant",
  "displayName": "MSSQL RDBMS Assistant",
  "description": "MSSQL MCP integration with tool invocation & table explorer. Author: Arturo Quiroga, Sr. Azure AI Cloud Solutions Architect for Partners, Microsoft Americas.",
  "author": "Arturo Quiroga (Sr. Azure AI Cloud Solutions Architect for Partners, Microsoft Americas)",
  "version": "0.0.1",
  "publisher": "your-publisher-id",
  "repository": {
    "type": "git",
    "url": "https://github.com/Arturo-Quiroga-MSFT/DBMS_Assistant_SK"
  },
  "icon": "resources/database.png",
  "engines": { "vscode": ">=1.85.0" },
  "categories": ["Other"],
  "activationEvents": [],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      { "command": "mssqlAssistant.start", "title": "MSSQL Assistant: Start / Connect" },
      { "command": "mssqlAssistant.refreshTables", "title": "MSSQL Assistant: Refresh Tables" },
      { "command": "mssqlAssistant.runTool", "title": "MSSQL Assistant: Run Tool" }
    ],
    "views": {
      "explorer": [
        { "id": "mssqlAssistant.tables", "name": "MSSQL Tables", "icon": "resources/database.svg" }
      ]
    }
  },
  "scripts": {
    "build": "tsc -p .",
    "watch": "tsc -w -p .",
    "package": "vsce package",
    "postinstall": "node scripts/ensure-icon.js"
  },
  "devDependencies": {
    "typescript": "^5.5.0",
    "@types/node": "^18.19.0",
    "@types/vscode": "^1.85.0",
    "@vscode/vsce": "^3.0.0"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.0"
  }
}
