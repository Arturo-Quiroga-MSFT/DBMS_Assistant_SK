###############################################
# Shared Environment Variables (Populate copies)
# Copy to .env (local dev) or provide through Azure Container Apps secrets/config.
# Do NOT commit real secrets.
###############################################

# ====== Azure AD / Identity (for SQL access via service principal) ======
AZURE_CLIENT_ID=__your_aad_app_client_id__
AZURE_CLIENT_SECRET=__your_aad_app_client_secret__
AZURE_TENANT_ID=__your_tenant_id__

# ====== SQL Server Target (MSSQL) ======
SERVER_NAME=__your_server_hostname__.database.windows.net
DATABASE_NAME=__your_database_name__
READONLY=true  # set to false to allow write operations (ensure policies!)
TRUST_SERVER_CERTIFICATE=false
CONNECTION_TIMEOUT=30

# ====== HTTP Bridge ======
HTTP_PORT=8080

# ====== Observability / Logging (optional future) ======
LOG_LEVEL=info

# ====== Execution Mode Flags (Python Orchestrator) ======
USE_REMOTE_MCP=true
MCP_HTTP_BASE_URL=http://localhost:8080  # or container apps FQDN once deployed

# ====== Azure OpenAI Embeddings ======
AZURE_OPENAI_ENDPOINT=https://__your_openai_resource__.openai.azure.com
AZURE_OPENAI_API_KEY=__your_openai_key__
AZURE_OPENAI_EMBEDDING_DEPLOYMENT=text-embedding-3-small

# ====== Cosmos DB (Schema Vector Storage) ======
COSMOS_ENDPOINT=https://__your_cosmos_account__.documents.azure.com:443/
COSMOS_KEY=__your_cosmos_key__
COSMOS_DATABASE=dbms_agent
COSMOS_CONTAINER=schema_vectors

# ====== Direct SQL Auth (only if not using AAD) ======
AZURE_SQL_SERVER=${SERVER_NAME}
AZURE_SQL_DATABASE=${DATABASE_NAME}
AZURE_SQL_USER=__sql_user__          # if using SQL auth (avoid if possible)
AZURE_SQL_PASSWORD=__sql_password__  # store as secret, never commit
AZURE_SQL_DRIVER=ODBC Driver 18 for SQL Server

# ====== MCP API (future authentication for HTTP bridge) ======
MCP_API_KEY=__optional_future_key__
