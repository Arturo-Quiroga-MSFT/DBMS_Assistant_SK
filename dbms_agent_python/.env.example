###############################################
# Python DBMS Agent Environment (.env.example)
# Copy to .env for local dev. Production should prefer secrets store.
###############################################

# Prefer remote MCP execution?
USE_REMOTE_MCP=true
MCP_HTTP_BASE_URL=http://localhost:8080
MCP_API_KEY=__optional_future_key__

# Azure OpenAI Embeddings
AZURE_OPENAI_ENDPOINT=https://__your_openai_resource__.openai.azure.com
AZURE_OPENAI_API_KEY=__your_openai_key__
AZURE_OPENAI_EMBEDDING_DEPLOYMENT=text-embedding-3-small

# Cosmos DB for schema embeddings
COSMOS_ENDPOINT=https://__your_cosmos_account__.documents.azure.com:443/
COSMOS_KEY=__your_cosmos_key__
COSMOS_DATABASE=dbms_agent
COSMOS_CONTAINER=schema_vectors

# Direct SQL (optional local path) - if using SQL auth
AZURE_SQL_SERVER=__your_server_hostname__.database.windows.net
AZURE_SQL_DATABASE=__your_database_name__
AZURE_SQL_USER=__sql_user__
AZURE_SQL_PASSWORD=__sql_password__
AZURE_SQL_DRIVER=ODBC Driver 18 for SQL Server
