###############################################
# Node MSSQL MCP Server Environment (.env.example)
# Copy to .env for local dev or configure in ACA.
###############################################

# Azure AD Service Principal (Client Credentials) for SQL access
AZURE_CLIENT_ID=__your_aad_app_client_id__
AZURE_CLIENT_SECRET=__your_aad_app_client_secret__
AZURE_TENANT_ID=__your_tenant_id__

# SQL target
SERVER_NAME=__your_server_hostname__.database.windows.net
DATABASE_NAME=__your_database_name__
READONLY=true
TRUST_SERVER_CERTIFICATE=false
CONNECTION_TIMEOUT=30

# HTTP bridge
HTTP_PORT=8080

# Logging (optional)
LOG_LEVEL=info

# Future: API Key auth for HTTP bridge (not yet enforced)
MCP_API_KEY=__optional_future_key__
